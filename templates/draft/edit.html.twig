{% extends 'base.html.twig' %}

{% block title %}
    Brouillons - Edition
{% endblock %}

{% block stylesheets %}
    <link href="//cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
{% endblock %}

{% block javascripts %}
    <script src="//cdn.quilljs.com/1.3.6/quill.min.js"></script>
    <script src="/js/draft.js"></script>
{% endblock %}

{% block body %}
<div class="container">
    <h1>Edition Brouillon</h1>
    <div class="row">
        <span class="col-1">Pour : </span>
        <input class="col-3" name="to" value="{{ draft.getTo() }}">
    </div>
    <div class="row">
        <span class="col-1">Sujet : </span>
        <input class="col-3" name="subject" value="{{ draft.getSubject() }}">
    </div>
    <div class="content">
        {{ draft.getContent() }}
    </div>

    <button class="btn btn-primary" data-action="save" data-route="{{ url('draft.update', {draftId: draft.getId()}) }}">Enregistrer</button>
</div>
{% endblock %}